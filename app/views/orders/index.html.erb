<div class="container mt-4">
  <h1 class="text-center">Lista de pedidos</h1>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Total</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th scope="row">Pedido <%= order.id %></th>
          <td><%= order.total %></td>
          <td>
          <%= link_to 'Ver pedido', order_path(order) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to 'Voltar', root_path, class:"btn btn-info" %>
</div>
