<div class="container mt-4">
  <div class="row">
    <h1>Order #<%= @order.id %></h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Product</th>
          <th>Created At</th>
          <th>Qt</th>
          <th class="text-center">Price</th>
          <th class="text-center">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.items.each do |item|%>
          <tr>
            <td><em><%= item.product.description %></em></h4></td>
            <td class="col-md-1"><em><%= item.created_at %></em></h4></td>
            <td class="col-md-1" style="text-align: center"><%= item.amount %></td>
            <td class="col-md-1 text-center"><%= item.product.price %></td>
            <td class="col-md-1 text-center"><%= item.total %></td>
          </tr>
        <% end %>
          <tr>
            <td>   </td>
            <td>   </td>
            <td>   </td>
            <td class="text-right">
            <p>
              <strong>Subtotal: </strong>
            </p>
            <p>
              <strong>Tax: </strong>
            </p></td>
            <td class="text-center">
            <p>
              <strong><%= @order.total %></strong>
            </p>
            <p>
              <strong>R$<%= @order.delivery_tax %></strong>
            </p></td>
          </tr>
          <tr>
            <td>   </td>
            <td>   </td>
            <td>   </td>
            <td class="text-right"><h4><strong>Total: </strong></h4></td>
            <td class="text-center text-danger"><h4><strong><%= @order.total + @order.delivery_tax %></strong></h4></td>
          </tr>
      </tbody>
    </table>
  </div>
  <%= link_to 'Voltar', root_path, class:"btn btn-info text-center" %>

</div>